<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Temperature Converter"
        android:textSize="50dp" />

    <!-- Subtitle TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#666666"
        android:text="Select your requirement from below"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <!-- First Row: Two Boxes Side by Side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Box 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FF5722"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/ctof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Celsius to Fahrenheit"
                    android:textColor="#FFF"
                    android:textSize="30sp" />
            </LinearLayout>

            <!-- Box 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#3F51B5"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/ctok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Celsius to Kelvin"
                    android:textColor="#FFF"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row: Two Boxes Side by Side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!-- Box 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#800080"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/ftoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Fahrenheit to Celsius"
                    android:textColor="#FFF"
                    android:textSize="30sp" />
            </LinearLayout>

            <!-- Box 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#DC143C"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/ftok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Fahrenheit to Kelvin"
                    android:textColor="#FFF"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Third Row: Two Boxes Side by Side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!-- Box 5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#008080"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/ktoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Kelvin to Celsius"
                    android:textColor="#FFF"
                    android:textSize="30sp" />
            </LinearLayout>

            <!-- Box 6 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#808000"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/ktof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Kelvin to Fahrenheit"
                    android:textColor="#FFF"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
